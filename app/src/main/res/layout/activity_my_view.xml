<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cwh.mypermission.MyViewAcivity">
    <com.example.cwh.mypermission.RectView
        android:id="@+id/myView"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        hui:default_size = "100dp"/>

    <!--<com.example.cwh.mypermission.MyAnimView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->

    <ImageView
        android:id="@+id/image"
        android:src="@drawable/round1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/image2"
        android:src="@drawable/round2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
